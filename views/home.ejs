                    <div class="sound-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div>Victory Sounds</div>
                </div>
                <label class="toggle-switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                </label>
            </div>
        </div>

        <!-- Additional Settings Section -->
