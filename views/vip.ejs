<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VIP Packages - Ping Pong</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/vip.css">

</head>
<body>
<div class="menu-container">
    <div class="header">
        <a href="/" class="back-btn"><i class="fas fa-arrow-left"></i></a>
        <h1>VIP Packages</h1>
        <p class="subtitle">Unlock exclusive upgrades and features!</p>

        <div class="currency-selector">
            <button class="currency-btn active" id="kshBtn">KSH</button>
            <button class="currency-btn" id="usdBtn">USD</button>
            <button class="currency-btn" id="eurBtn">EUR</button>
        </div>
    </div>

    <div class="vip-container">
        <!-- Basic VIP Package -->
        <div class="vip-package">
            <h3 class="package-title">Basic VIP</h3>
            <div class="package-price">KSH 200 <span class="price-ksh">/ month</span></div>
            <ul class="package-features">
                <li><i class="fas fa-check"></i> Exclusive Paddle Skin</li>
                <li><i class="fas fa-check"></i> +10% XP Boost</li>
                <li><i class="fas fa-check"></i> 100 Coins Daily</li>
                <li><i class="fas fa-times" style="color: #ff4757;"></i> Advanced Statistics</li>
                <li><i class="fas fa-times" style="color: #ff4757;"></i> Priority Support</li>
            </ul>
            <button class="btn-purchase">Purchase Now</button>
        </div>

        <!-- Premium VIP Package (Most Popular) -->
        <div class="vip-package popular">
            <h3 class="package-title">Premium VIP</h3>
            <div class="package-price">KSH 500 <span class="price-ksh">/ month</span></div>
            <ul class="package-features">
                <li><i class="fas fa-check"></i> 3 Exclusive Paddle Skins</li>
                <li><i class="fas fa-check"></i> +25% XP Boost</li>
                <li><i class="fas fa-check"></i> 250 Coins Daily</li>
                <li><i class="fas fa-check"></i> Advanced Statistics</li>
                <li><i class="fas fa-check"></i> Priority Support</li>
            </ul>
            <button class="btn-purchase">Purchase Now</button>
        </div>

        <!-- Ultimate VIP Package -->
        <div class="vip-package">
            <h3 class="package-title">Ultimate VIP</h3>
            <div class="package-price">KSH 1000 <span class="price-ksh">/ month</span></div>
            <ul class="package-features">
                <li><i class="fas fa-check"></i> All Exclusive Paddle Skins</li>
                <li><i class="fas fa-check"></i> +50% XP Boost</li>
                <li><i class="fas fa-check"></i> 500 Coins Daily</li>
                <li><i class="fas fa-check"></i> Advanced Statistics</li>
                <li><i class="fas fa-check"></i> 24/7 Priority Support</li>
                <li><i class="fas fa-check"></i> Exclusive Tournaments</li>
            </ul>
            <button class="btn-purchase">Purchase Now</button>
        </div>
    </div>

    <div class="items-container">
        <h3 class="section-title">Individual Upgrades</h3>
        <p style="text-align: center; margin-bottom: 20px; opacity: 0.8;">Purchase individual items with KSH</p>

        <div class="vip-items">
            <!-- Item 1 -->
            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-table-tennis-paddle-ball"></i></div>
                <h4 class="item-title">Pro Paddle</h4>
                <div class="item-price">KSH 150</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <!-- Item 2 -->
            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-palette"></i></div>
                <h4 class="item-title">Gold Skin</h4>
                <div class="item-price">KSH 100</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <!-- Item 3 -->
            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-bolt"></i></div>
                <h4 class="item-title">Speed Boost</h4>
                <div class="item-price">KSH 200</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <!-- Item 4 -->
            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-chart-line"></i></div>
                <h4 class="item-title">Advanced Stats</h4>
                <div class="item-price">KSH 120</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <!-- item 5 -->
            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-shield-alt"></i></div>
                <h4 class="item-title">Defense Boost</h4>
                <div class="item-price">KSH 80</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-star"></i></div>
                <h4 class="item-title">Rare Effect</h4>
                <div class="item-price">KSH 90</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-coins"></i></div>
                <h4 class="item-title">Coin Multiplier</h4>
                <div class="item-price">KSH 70</div>
                <button class="item-btn">Buy Now</button>
            </div>

            <div class="vip-item">
                <div class="item-icon"><i class="fas fa-hat-wizard"></i></div>
                <h4 class="item-title">Avatar Hat</h4>
                <div class="item-price">KSH 45</div>
                <button class="item-btn">Buy Now</button>
            </div>
        </div>
    </div>

    <a href="/" class="back-button">Back to Home</a>
</div>

<div class="notification" id="rewardNotification">
    <i class="fas fa-check-circle notification-icon"></i>
    <div>Purchase successful! VIP activated.</div>
</div>

<script src="/js/vip.js">

</script>
</body>
</html>